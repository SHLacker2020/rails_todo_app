<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_url, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :coin, 'Search for a coin id'%>
            <%= text_field_tag :coin, nil, placeholder: 'Eg. bitcoin', class: 'form-control' %>
          </div>
          <div class="col-lg-12 mt-5">
          <% if flash[:alert] %>
            <div class="alert alert-warning"><%= flash[:alert] %></div>
          <% end %>
          <div class="mx-auto mt-5" style="width: 400px">
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
